mixin ball(year, title)
  div(class='ball-wrap ball-wrap--' + year)
    div(class='ball ball--' + year)
      .ball__inn
        .ball__year #{year}
        .ball__title #{title}

mixin ballD(year, title)
  div(class='balls-d__item balls-d__item--' + year)
    .balls-d__item-info
      .ball-d__year #{year}
      .ball-d__title #{title}

